{{#if posts.length}}
<div class="post-list">
    <h3>My Posts:</h3>

    {{#each posts as |post| }}
    <a href="/post/{{post.id}}" class="post">
        <div class="card">
            <div class="card-header display-flex justify-space-between">
                <h2 class="post-title">{{post.title}}</h2>
                <h3 class="post-user">Posted on {{format_date post.date_posted}}</h3>
            </div>
            <p class="post-body card-body">{{post.body}}</p>
        </div>
    </a>
    <button class="delete-post-btn btn" data-id="{{post.id}}">❌</button>
    <button class="edit-post-btn btn" data-id="{{post.id}}">✏️</button>
    {{/each}}
</div>
{{/if}}



<button id="new-post-btn">Add New Post</button>
<form class="form" id="new-post-form">
    <div class="form-group">
        <label for="post-title">Post title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
    </div>
    <div class="form-group">
        <label for="post-desc">Post body:</label>
        <textarea class="form-input" id="post-body" name="post-body"></textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

<script src="./js/dashboard.js"></script>